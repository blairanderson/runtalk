<div class="navbar-fixed-top">
  <div class="navbar-inner">
    <a class="chat-name text-center">RunTalk</a>
  </div>
</div>


<!--  center-fields is solely for the purpose of centering the home
      search/create fields vertically

      center-button are for sizing the actual input fields so they
         fit in the mobile window -->


  <div class="text-center well" id="headline">
    <h3>Welcome to RunTalk.</h3>
    <h4>Mobile Chatrooms. Your Location, Your Images.</h4>
  </div>
<div>
  <h1 class="text-center">Find Room</h1>
  <%= form_tag("/chats", :method => "get", :class => "form-search text-center") do %>
    <%= text_field_tag :id, nil, id: "search-box", data: {provide: "typeahead", items: 10, source: @search_data.to_json} %>
    <%= submit_tag "Search", :class =>"btn btn-info center-button", :action => "show" %>
  <% end %>

  <h1 class="text-center">Create Room</h1>
  <%= form_tag("/chats/new", :method => "get", :class => "form-search text-center" ) do %>
    <%= text_field_tag :name %>
    <%= submit_tag "Create", :class =>"btn btn-info center-button", :action => 'new' %>
  <% end %>
</div>

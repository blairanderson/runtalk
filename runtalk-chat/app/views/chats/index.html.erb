<div class="navbar-fixed-top">
  <div class="navbar-inner">
    <a class="chat-name text-center">RunTalk</a>
    <ul class="nav">
      <li>
        <div class="btn-group pull-right">

          <% if current_user %>
            <%= link_to "Sign Out", edit_sessions_path, class: "btn", :method => :delete %>
          <% else %>
            <%= link_to "Log In", new_sessions_path, class: "btn btn-info" %>
          <% end %>

          <%= link_to "Sign Up", new_users_path, class: "btn" %>
        </div>
      </li>
    </ul>
  </div>
</div>

  <div class="text-center well" id="headline">
    <h3>Welcome to RunTalk.</h3>
    <h4>Mobile Chatrooms. Your Location, Your Images.</h4>
  </div>
<div>
<% if flash[:notice] %>
  <div class='alert'>
    <h3 class="text-center"><%= flash[:notice] %></h3>
  </div>
<% end %>
  <h1 class="text-center">Find Room</h1>
  <%= form_tag("/search", :method => "get", :class => "form-search text-center") do %>
    <%= text_field_tag :id, nil, id: "search-box", autocomplete: "off",  data: {provide: "typeahead", items: 10, source: @search_data.to_json} %>
    <%= submit_tag "Search", :class =>"btn btn-info center-button", :action => "show" %>
  <% end %>


  <h1 class="text-center">Create Room</h1>
  <%= form_tag("/chats/new", :method => "get", :class => "form-search text-center" ) do %>
    <%= text_field_tag :name %>
    <%= submit_tag "Create", :class =>"btn btn-info center-button", :action => 'new' %>
  <% end %>
</div>

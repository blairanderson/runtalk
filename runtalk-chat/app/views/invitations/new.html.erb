<div class="text-center">
  
  <h2>Add a User</h2>

<%= form_tag chat_invitations_path(@chat) do %>
  <%= label_tag :phone_number %>
  <%= phone_field_tag :phone_number,nil, required: true, style: "font-size: 31px;"  %>
  <br>
  <%= submit_tag "Send Invitation", class: "btn btn-success" %>
<% end %>
  <%= link_to "Back to Chatroom", @chat %>
</div>

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.3.1/jquery.maskedinput.min.js"></script>
<script type="text/javascript">
  jQuery(function($){
     $("#phone_number").mask("999-999-9999");
  });
</script>

<div class="text-center">
  
  <h2>Add a User</h2>
  <%= simple_form_for [@chat, @invitation] do |f| %>
    <%= f.input :phone_number, required: true, input_html: {style: "font-size: 31px"} %>
    <%= f.submit :submit, class: "btn btn-success" %>
  <% end %>
  <%= link_to "Back to Chatroom", @chat %>
</div>

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.3.1/jquery.maskedinput.min.js"></script>
<script type="text/javascript">
  jQuery(function($){
     $("#invitation_phone_number").mask("999-999-9999");
  });
</script>

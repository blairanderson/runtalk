<h2>Add a User</h2>


<%= form_tag invitations_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= hidden_field_tag :chat_id, @chat_id %>
  </div>

  <div class="actions"><%= submit_tag "Send Invitation" %></div>
<% end %>
